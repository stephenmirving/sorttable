{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "google",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": [
      "warn",
      "never"
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "indent": [
      "warn",
      2,
      {
        "SwitchCase": 1,
        "VariableDeclarator": {
          "var": 2,
          "let": 2,
          "const": 3
        }
      }
    ],
    "max-len": [
      "warn",
      {
        "code": 82,
        "tabWidth": 2,
        "comments": 100,
        "ignoreTrailingComments": true,
        "ignoreUrls": true,
        "ignoreStrings": true
      }
    ],
    "no-mixed-spaces-and-tabs": [
      "error"
    ],
    "no-tabs": [
      "error"
    ],
    "no-trailing-spaces": [
      "error"
    ],
    "no-var": "off",
    "one-var": [
      "warn",
      {
        "var": "consecutive",
        "let": "consecutive",
        "const": "never"
      }
    ],
    "object-curly-spacing": "off",
    "operator-linebreak": "off",
    "require-jsdoc": "off",
    "semi": [
      "warn",
      "always",
      {
        "omitLastInOneLineBlock": true
      }
    ],
    "space-before-function-paren": [
      "warn",
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  }
}
